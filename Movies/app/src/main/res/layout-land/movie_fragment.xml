<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:textAlignment="gravity">

    <ImageView
        android:id="@+id/fragment_poster"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/img_description"
        app:layout_constraintBottom_toTopOf="@+id/overview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title_pretext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/title"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/fragment_title"
        app:layout_constraintStart_toEndOf="@+id/fragment_poster" />

    <TextView
        android:id="@+id/fragment_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/bubblegum_sans"
        android:textAlignment="viewStart"
        android:textColor="#F0F3F4"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_pretext"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lang_pretext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/lang"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_description"
        app:layout_constraintStart_toEndOf="@+id/fragment_poster"
        app:layout_constraintTop_toBottomOf="@+id/fragment_title"
        app:layout_constraintVertical_bias="0.137" />

    <TextView
        android:id="@+id/fragment_lang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/bubblegum_sans"
        android:textAlignment="viewStart"
        android:textColor="#F0F3F4"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/lang_pretext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/lang_pretext" />

    <TextView
        android:id="@+id/date_pretext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/date"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_description"
        app:layout_constraintStart_toEndOf="@+id/fragment_poster"
        app:layout_constraintTop_toBottomOf="@+id/lang_pretext"
        app:layout_constraintVertical_bias="0.284" />

    <TextView
        android:id="@+id/fragment_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/bubblegum_sans"
        android:textAlignment="viewStart"
        android:textColor="#F0F3F4"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/date_pretext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/date_pretext" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/overview_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/fragment_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_poster"
        tools:text="Overview" />

    <TextView
        android:id="@+id/fragment_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/bubblegum_sans"
        android:scrollbars="vertical"
        android:textAlignment="viewStart"
        android:textColor="#F0F3F4"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview" />

</androidx.constraintlayout.widget.ConstraintLayout>